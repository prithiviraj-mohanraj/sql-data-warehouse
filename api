system="$1"

case "$system" in
  RC)
    # RC needs 4 params
    if [ $# -ne 4 ]; then
        echo "ERROR: RC system requires 4 params. Got: $#"
        exit 2
    fi
    ;;
  *)
    # Everything else needs 6 or 7 params
    if [ $# -ne 7 ] && [ $# -ne 6 ]; then
        echo "ERROR: System '$system' requires 6 or 7 params. Got: $#"
        exit 2
    fi
    ;;
esac
